<% include ../partials/header %>
<div class="container-fluid">
  <div class="row">
  
    <div class="col-md-6 col-xs-8 offset-md-3 offset-xs-2">
      <h1 class="display-4 text-center"><%= campground.name %></h1> 
      <form action="/campgrounds/<%= campground._id %>/comments" method="post" >

        <div class="form-group">
            <label for="name">Add New Comment</label>
            <input class="form-control" type="text" name="comment[text]">
        </div> 
        <div class="form-group">
          <label for="name">Author</label>
          <input class="form-control" type="text" name="comment[author]">
      </div> 
        <div class="form-group">
            <input type="reset" class="btn btn-info btn-block" value="Reset">  
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-info btn-block" value="Add Comment">  
        </div>
      </form>
    </div>
  </div>
</div>
<% include ../partials/footer %>